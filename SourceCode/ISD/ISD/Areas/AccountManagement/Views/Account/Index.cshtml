@using ISD.Areas.AccountManagement.Models;
@{
    ViewBag.Title = "Account management";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/Scripts/Account/service.js"></script>
<script src="~/Scripts/Account/viewModel.js"></script>
<script src="~/Scripts/Account/start.js"></script>
<link href="~/Content/Account/main.css" rel="stylesheet" />
@{ Admins admin = (Admins)Session["Admin"]; }
<div class="divCover">
    <table class="tblCover">
        <tr>
            <!--các nút chức năng-->
            <td colspan="2" class="tdButton">
                <button type="button" class="btn btn-default" data-bind="click: $root.create">Create</button>
                <button type="button" class="btn btn-primary" data-bind="click: $root.register">Register</button>
                <button type="button" class="btn btn-danger" data-bind="click: $root.remove, enable: $root.canRemove">Remove</button>
            </td>
        </tr>
        <tr>
            <td>
                <!--bảng hiện thị các danh sách các tài khoản-->
                <table id="grid"></table>
            </td>
            <td class="leftSide">
                <!--form thông tin của 1 tài khoản-->
                <table data-bind="with: $root.admin">
                    <tr>
                        <td class="required">Name</td>
                        <td><input type="text" maxlength="50" data-bind="value: name" class="form-control" required/></td>
                    </tr>
                    <tr>
                        <td class="required">Account</td>
                        <td><input type="text" maxlength="20" data-bind="value: account, enable: $root.isCreate" class="form-control" required /></td>
                    </tr>
                    <tr data-bind="visible: $root.isCreate">
                        <td class="required">Password</td>
                        <td><input type="password" maxlength="20" data-bind="value: password" class="form-control" required /></td>
                    </tr>
                    <tr>
                        <td class="required">Birthday</td>
                        <td><input type="text" data-bind="value: birthday" id="birthday" class="form-control" required /></td>
                    </tr>
                    <tr>
                        <td class="required">Phone</td>
                        <td><input type="text" maxlength="20" data-bind="value: phone" class="form-control" required /></td>
                    </tr>
                    <tr>
                        <td class="required">Mail</td>
                        <td><input type="email" maxlength="100" data-bind="value: mail, enable: $root.isCreate" class="form-control" required /></td>
                    </tr>
                    <tr>
                        <td class="required">Address</td>
                        <td><input type="text" maxlength="200" data-bind="value: address" class="form-control" required /></td>
                    </tr>
                    <tr>
                        <td class="required">Role</td>
                        <td>
                            <select class="form-control" data-bind="options: $root.roleOptions, enable: $root.isCreate, optionsText: 'name', optionsValue: 'id', value: role"></select>
                            <input type="text" value="@admin.adminId.ToString()" data-bind="visible: false" id="modifiedBy" />
                        </td>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
</div>

