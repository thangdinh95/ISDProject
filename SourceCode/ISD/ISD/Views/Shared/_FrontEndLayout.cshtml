<!DOCTYPE html>

<html>
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <title>@ViewBag.Title</title>
    <!--Favicon-->
    <link href="~/Imagesfiles/vavabbqfavi.png" type="image/png" rel="shortcut icon" />
    <!-- Font -->
    <link href="https://fonts.googleapis.com/css?family=Hind|Open+Sans+Condensed:300|Poiret+One|Shadows+Into+Light" rel="stylesheet">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
    <!-- CSS -->
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/animate.css" rel="stylesheet" />
    <link href="~/Content/wolf-animation.css" rel="stylesheet" />
    <link href="~/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
</head>
<body>
    <div>
        <!-- start menubar -->
        <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
            <div class="container">
                <a class="navbar-brand wow zoomIn" href="/Home/Index" data-wow-duration="2s" data-wow-delay="0.8s"><img src="~/Imagesfiles/vavabbq.png" width="100" height="50"></a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item active wow fadeInDown" data-wow-duration="1.5s" data-wow-delay="0.5s">
                            <a class="nav-link" href="/Home/Index">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item wow fadeInDown" data-wow-duration="1.5s" data-wow-delay="0.4s">
                            <a class="nav-link" href="/Home/Menu">Menu</a>
                        </li>
                        <li class="nav-item wow fadeInDown" data-wow-duration="1.5s" data-wow-delay="0.2s">
                            <a class="nav-link" href="/Home/News">News</a>
                        </li>
                        <li class="nav-item wow fadeInDown" data-wow-duration="1.5s" data-wow-delay="0.1s">
                            <a class="nav-link" href="/Home/Contact">Contact</a>
                        </li>
                        <li class="nav-item wow fadeInDown">
                            <a class="nav-link" href="/Home/About">About us</a>
                        </li>
                    </ul>

                </div>
            </div>
        </nav>
        <!-- start BTT -->
        <div id="top">
            <a href="#top"><img src="~/Imagesfiles/btt.png" width="45" height="50"></a>
        </div>
        <!-- end menubar -->
        @RenderBody()
        <footer>
            <div class="container">
                <div class="row">
                    <div class="col-sm-4">
                        <img src="~/Imagesfiles/favi1vava.png" class="img-fluid logo-footer">
                    </div>

                    <div class="col-sm-3">
                        <h6> Vava BBQ </h6>
                        <a href="/Home/About" class="footer-menu">About Us</a><br>
                        <a href="/Home/Menu" class="footer-menu">Menu</a><br>
                        <a href="/Home/News" class="footer-menu">News</a>
                    </div>

                    <div class="col-sm-3">
                        <h6> ORDER </h6>
                        <p>Hotline: 0128 4553 770</p>
                        <p>Address: 65 Le Thanh Nghi</p>
                    </div>

                    <div class="col-sm-2">
                        <h6> SNS </h6>
                        <a href="#"><img src="~/Imagesfiles/fb.png" width="35" height="35"></a>
                        <a href="#"><img src="~/Imagesfiles/ins.png" width="40" height="40"></a>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.11.0/umd/popper.min.js" integrity="sha384-b/U6ypiBEHpOf/4+1nzFpr53nxSS+GLCkfwBdFNTxtclqqenISfwAzpKaMNFNmj4" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/js/bootstrap.min.js" integrity="sha384-h0AbiXch4ZDo7tp9hKZ4TsHbi047NrKGLO3SEJAg45jXxnGIfYzk4Si90RDIqNm1" crossorigin="anonymous"></script>
    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/style.js"></script>
    <script src="~/Scripts/jquery.easing.1.3.js"></script>
    <script src="~/Scripts/wow.js"></script>
</body>
</html>
