<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <script src="~/Scripts/knockout-3.4.2.js"></script>
    <script src="~/Scripts/blockUI.js"></script>
    <script src="~/Scripts/toastr.min.js"></script>
    <link href="~/Content/toastr.min.css" rel="stylesheet" />
    @using ISD.Areas.AccountManagement.Models;

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                @{ Admins admin = (Admins)Session["Admin"]; }
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "ToAdminHome", "Home", new { area ="" }, null)</li>   
                    @{ if (admin.role == ROLES.SUPERADMIN)
                        {
                            <li>@Html.ActionLink("Account Management", "Index", "Account", new { area = "AccountManagement" }, null)</li>
                        }
                    }
                   
                    <li>@Html.ActionLink("Category Management", "Index", "Category", new { area = "CategoryManagement" }, null)</li>   
                    <li>@Html.ActionLink("Product Management", "Index", "Product", new { area = "ProductManagement" }, null)</li>   
                    <li>@Html.ActionLink("Bill Management", "Index", "Bill", new { area = "BillManagement" }, null)</li>   
                    <li>@Html.ActionLink("Sales Management", "Index", "Sales", new { area = "Sales`Management" }, null)</li>   
                    <li>@Html.ActionLink("Log Management", "Index", "Log", new { area = "LogManagement" }, null)</li>  
                    <li id="logout"><a href="#">Logout</a></li>         
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

   
</body>
</html>
<script>
    $(function () {
        $("#logout").click(function () {
            var accept = confirm("Are you sure to logout?");
            if (accept) {
                window.location.href = "/admin";
            }
        })
    });
</script>